<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".login"
    android:gravity="center">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/loginlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_med_vapsi_logo"
            android:layout_margin="30sp"/>


        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginlogo"
            android:layout_marginStart="40sp"
            android:text="LOGIN"
            android:textColor="#000"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/email_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_text"
            android:layout_marginStart="40sp"
            android:layout_marginTop="25sp"
            android:text="Email"
            android:textColor="#000"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_txtv"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40sp"
            android:backgroundTint="#000"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/password_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginStart="40sp"
            android:layout_marginTop="25sp"
            android:text="Password"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_txtv"
            android:layout_marginStart="40sp"
            android:layout_marginEnd="40sp"
            android:backgroundTint="#000"
            android:inputType="textPassword"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="40sp"
            android:text="Forget Password?"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp" />


        <Button
            android:id="@+id/emailSignInButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="166dp"
            android:layout_height="50dp"
            android:layout_below="@+id/or"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/sq_border"
            android:text="LOGIN"
            android:textColor="#000"
            android:textSize="18sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailSignInButton"
            android:layout_alignParentRight="true"
            android:src="@drawable/plus"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="50sp"
            android:backgroundTint="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Terms &amp; Condition"
            android:textSize="18sp"
            android:layout_margin="20sp"/>

    </RelativeLayout>